<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/btn_bg_color_primary" android:gradientRadius="100dp" android:startColor="@color/btn_bg_color_primary" android:type="linear" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/btn_bg_color_primary" android:gradientRadius="100dp" android:startColor="@color/btn_bg_color_primary" android:type="linear" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>

    </item>
</selector>