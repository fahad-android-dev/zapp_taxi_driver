<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context=".mvvm.home.view.HomeFragment">

        <include
            android:id="@+id/layoutHomeToolbar"
            layout="@layout/layout_home_toolbar" />

       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:fillViewport="true"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/layoutHomeToolbar"
           android:layout_height="0dp">
           
           
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <com.suke.widget.SwitchButton
                   android:id="@+id/switchButton"
                   android:layout_width="@dimen/_130sdp"
                   android:layout_height="@dimen/_45sdp"
                   android:layout_marginTop="@dimen/_30sdp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="10dp"
                   android:visibility="visible" />

               <LinearLayout
                   android:id="@+id/cvDetails"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_130sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_marginHorizontal="@dimen/_3sdp"
                   android:background="@drawable/shadow_background"
                   app:layout_constraintTop_toBottomOf="@+id/switchButton"
                   android:gravity="center_horizontal"
                   android:orientation="horizontal"
                   android:weightSum="3">


                   <androidx.cardview.widget.CardView
                       android:id="@+id/card1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_margin="5dp"
                       android:layout_weight="1"
                       android:foregroundGravity="center"
                       app:cardBackgroundColor="@color/color_yellow"
                       app:cardCornerRadius="@dimen/_3sdp"
                       app:cardElevation="@dimen/_3sdp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:background="@color/primary_dark_color"
                               android:gravity="center">

                               <TextView
                                   android:id="@+id/btnTotalBooking"
                                   style="@style/TextStyleCenterMedium"
                                   android:layout_width="wrap_content"
                                   android:layout_height="@dimen/_80sdp"
                                   android:layout_gravity="center"
                                   android:fontFamily="monospace"
                                   android:gravity="center"
                                   android:text="0"
                                   android:textColor="@color/color_white"
                                   android:textSize="@dimen/big_text_size"
                                   android:textStyle="bold" />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:gravity="center">

                               <TextView
                                   style="@style/TextStyleCenterMedium"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:layout_marginHorizontal="@dimen/_5sdp"
                                   android:gravity="center"
                                   android:text="@string/label_total_booking"
                                   android:textColor="@color/color_black"
                                   />

                           </LinearLayout>


                       </LinearLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:id="@+id/card2"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_margin="@dimen/_3sdp"
                       android:layout_weight="1"
                       android:foregroundGravity="center"
                       app:cardBackgroundColor="@color/color_yellow"
                       app:cardCornerRadius="@dimen/_3sdp"
                       app:cardElevation="@dimen/_3sdp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:background="@color/primary_dark_color"
                               android:gravity="center">

                               <TextView
                                   android:id="@+id/btnTodayBooking"
                                   style="@style/TextStyleCenterMedium"
                                   android:layout_width="wrap_content"
                                   android:layout_height="@dimen/_80sdp"
                                   android:layout_gravity="center"
                                   android:fontFamily="monospace"
                                   android:gravity="center"
                                   android:text="0"
                                   android:textColor="@color/color_white"
                                   android:textSize="@dimen/big_text_size"
                                   android:textStyle="bold" />


                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:gravity="center">

                               <TextView
                                   style="@style/TextStyleCenterMedium"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:layout_marginHorizontal="@dimen/_5sdp"
                                   android:gravity="center"
                                   android:text="@string/label_today_s_booking"
                                   android:textColor="@color/color_black"
                                   />

                           </LinearLayout>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:id="@+id/card3"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_margin="@dimen/_3sdp"
                       android:layout_weight="1"
                       android:foregroundGravity="center"
                       app:cardBackgroundColor="@color/color_yellow"
                       app:cardCornerRadius="@dimen/_3sdp"
                       app:cardElevation="@dimen/_3sdp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:background="@color/primary_dark_color"
                               android:gravity="center">

                               <TextView
                                   android:id="@+id/btnTotalFare"
                                   style="@style/TextStyleCenterMedium"
                                   android:layout_width="wrap_content"
                                   android:layout_height="@dimen/_80sdp"
                                   android:layout_gravity="center"
                                   android:fontFamily="monospace"
                                   android:gravity="center"
                                   android:text="0"
                                   android:textColor="@color/color_white"
                                   android:textSize="@dimen/big_text_size"
                                   android:textStyle="bold" />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_gravity="center"
                               android:gravity="center">

                               <TextView
                                   style="@style/TextStyleCenterMedium"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:layout_marginHorizontal="@dimen/_5sdp"
                                   android:gravity="center"
                                   android:text="@string/label_today_s_earning"
                                   android:textColor="@color/color_black" />
                               
                           </LinearLayout>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>


               </LinearLayout>

               <LinearLayout
                   android:id="@+id/cvRideDetails"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/cvDetails"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_marginHorizontal="@dimen/_3sdp"
                   android:padding="@dimen/_3sdp"
                   android:background="@drawable/shadow_background"
                   android:gravity="top"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="end|center_vertical"
                       android:orientation="horizontal"
                       >

                       <TextView
                           android:id="@+id/tvDate"
                           style="@style/TextStyleCenterMedium"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:padding="3dp"
                           android:text="date"
                           android:textColor="@color/color_text_blue"
                           android:textSize="18sp"
                           />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="start|center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/tvCustomerName"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:padding="3dp"
                           android:text="Name"
                           android:textAllCaps="true"
                           android:textColor="@color/color_text_orange"
                           android:textSize="20sp"/>

                       <TextView
                           android:id="@+id/tvPaymentMode"
                           android:layout_width="0dp"
                           android:layout_weight="1f"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:paddingTop="7dp"
                           android:text="Payment mode : cash"
                           android:textSize="15sp"
                           android:textStyle="bold"
                           android:textColor="@color/app_color_status_bar"
                           android:textAlignment="textEnd"
                           />


                   </LinearLayout>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/app_color_status_bar"
                       />

                   <include android:id="@+id/lyt_location"
                       layout="@layout/location_view"
                       />

                   <TextView
                       android:id="@+id/tvRideStatus"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:textSize="@dimen/_18ssp"
                       android:textStyle="bold"
                       />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_90sdp"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:layout_marginHorizontal="@dimen/_10sdp"
                       >

                       <com.google.android.material.card.MaterialCardView
                           android:id="@+id/cvWayToCustomer"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:cardCornerRadius="@dimen/_10sdp"
                           app:cardElevation="@dimen/_10sdp"
                           android:layout_marginRight="@dimen/_30sdp">

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:padding="@dimen/_5sdp"
                               android:gravity="center"
                               android:layout_gravity="center">

                               <ImageView
                                   android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@drawable/ic_to_customer_location"
                                   app:tint="@color/app_color_status_bar" />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/way_to_customer"
                                   android:textColor="#000"
                                   android:textSize="@dimen/_12ssp"
                                   />

                           </LinearLayout>

                       </com.google.android.material.card.MaterialCardView>

                       <View
                           android:layout_width="3dp"
                           android:layout_height="match_parent"
                           android:layout_margin="5dp"
                           />

                       <com.google.android.material.card.MaterialCardView
                           android:id="@+id/cvCallCustomer"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:cardCornerRadius="@dimen/_10sdp"
                           app:cardElevation="@dimen/_10sdp"
                           android:layout_marginLeft="@dimen/_30sdp">

                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:padding="@dimen/_5sdp"
                               android:gravity="center"
                               android:layout_gravity="center">

                               <ImageView
                                   android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@drawable/ic_call_customer"
                                   app:tint="@color/app_color_status_bar" />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/call_customer"
                                   android:textColor="#000"
                                   android:textSize="@dimen/_12ssp"
                                   />

                           </LinearLayout>

                       </com.google.android.material.card.MaterialCardView>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_130sdp"
                       android:layout_marginHorizontal="@dimen/_5sdp"
                       android:layout_marginTop="-30dp"
                       android:gravity="center"
                       >

                       <Button
                           android:id="@+id/btnAcceptBooking"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:layout_gravity="center"
                           android:layout_marginRight="5dp"
                           android:background="@drawable/circle_btn"
                           android:gravity="center"
                           android:padding="5dp"
                           android:text="@string/accept_booking"
                           android:textColor="@color/color_white"
                           android:visibility="visible" />

                       <Button
                           android:id="@+id/btn_start_ride"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:layout_marginRight="5dp"
                           android:background="@drawable/circle_btn"
                           android:padding="5dp"
                           android:text="@string/start_ride"
                           android:textColor="@color/color_white"
                           android:visibility="gone"
                           tools:ignore="ButtonStyle" />

                       <Button
                           android:id="@+id/cancelride"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:layout_marginLeft="40dp"
                           android:background="@drawable/circle_btn"
                           android:text="@string/reject_ride"
                           android:textColor="@color/color_white" />

                       <Button
                           android:id="@+id/btn_Stop_ride"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:layout_marginRight="5dp"
                           android:background="@drawable/circle_btn"
                           android:text="@string/stop_ride"
                           android:textColor="@color/color_white"
                           android:visibility="gone" />

                   </LinearLayout>

               </LinearLayout>





           </androidx.constraintlayout.widget.ConstraintLayout>
           
           
       </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>